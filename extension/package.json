{
  "name": "mcx",
  "displayName": "mcx",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:pack.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mcx",
        "aliases": [
          "mcx"
        ],
        "extensions": [
          ".mcx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mcx",
        "scopeName": "source.mcx",
        "path": "./syntax.json"
      }
    ],
    "commands": [
      {
        "title": "mcx: Build",
        "command": "mcx.build"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "mcx.tasks",
          "name": "mcx Tasks"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.2.4",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.0.4",
    "webpack": "^5.84.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
